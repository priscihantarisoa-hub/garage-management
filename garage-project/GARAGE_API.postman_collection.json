						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\",\n    \"telephone\": \"+261340000000\",\n    \"voiture_marque\": \"Toyota\",\n    \"voiture_modele\": \"Corolla\",\n    \"voiture_immatriculation\": \"1234ABC\"\n}"
